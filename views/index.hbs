<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-5">{{ title }}</h1>
    {{!-- <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p> --}}
  </div>
</div>

<div class="container-fluid">
  <form id="sharp-form" action="/upload/sharp" method="post" enctype="multipart/form-data">
    <!-- Begins upload original image section -->
    {{!-- <div class="form-group row">
      <div class="col-sm-12">
        <label for="image-file" class="heading-label">Original Image (16:9)</label>
      </div>
      <div class="col-sm-12">
        <input class="btn btn-info" type="file" name="image-file" id="image-file" />
