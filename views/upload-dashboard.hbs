<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-5">Results Page</h1>
    {{!-- <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p> --}}
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div class="list-group">
        <div id="sharp-results-section" class="row">
          <div class="col-sm-12">
            <h2>Preview / Post-Processing Metadata</h2>
          </div>          
        {{#each images}}
          <div class="col-sm-6 sharp-result-card mb-2">
              <a
                href="/uploads/{{filename}}"
                data-format="{{format}}"
                data-width="{{width}}"
                data-height="{{height}}"
                data-size="{{size}}"
                data-filename="{{filename}}"
                class="list-group-item list-group-item-info list-group-item-action image-result-item"
                style="text-transform: uppercase; font-size:20px;"
                target="_blank"
              >
                {{device}} image <img src="/icons/box-arrow-up-right.svg" alt="external-link">
              </a>
              <ul class="list-group">
                {{!-- <li class="list-group-item list-group-item-light">
                  Filename: {{filename}}
                </li> --}}
                <li class="list-group-item list-group-item-light">
                  <strong>Format:</strong> {{format}}
                </li>
                <li class="list-group-item list-group-item-light">
                  <strong>Width:</strong> {{width}}px
                </li>
                <li class="list-group-item list-group-item-light">
                  <strong>Height:</strong> {{height}}px
                </li>
                <li class="list-group-item list-group-item-light">
                  <strong>Size:</strong> {{size}} (B)
                </li>
              </ul>

              {{!-- <a href="#" class="list-group-item list-group-item-action active">Cras justo odio</a> --}}
          </div>
        {{/each}}
        </div>
    </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 d-flex justify-content-center">
      <div id="loader-gif" class="d-none">
        <img src="https://media.giphy.com/media/xTk9ZvMnbIiIew7IpW/giphy.gif" alt="loader-gif">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="list-group">
        <div id="s3-results-section" class="row mb-4 d-none">
          <div class="col-sm-12">
            <h2>S3 Upload Metadata:</h2>
          </div>            
          {{!-- ajax success/fail response functions render metadata returned from s3 here --}}
        </div>
      </div>
    </div>
  </div>

  <form id="upload-form" class="mt-4" name="upload-form">
    {{!-- SUBMIT BUTTON --}}
    <div class="form-group row">
      <div class="col-sm-12">
        <button id="upload-submit" type="submit" class="btn btn-info mt-4" name="submit">
          Upload
        </button>
        <a id="upload-manage" href="/manage" class="btn btn-info mt-4 d-none">
          Manage
        </a>
      </div>
    </div>  
    {{!-- SUBMIT BUTTON --}}
  </form>

</div>



